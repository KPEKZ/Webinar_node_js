<body>
    <div class="container-fluid">
        <header class="b-header">
            <p class="news">Auth register</p>
        </header>

        <section class="newSection container">



            <form action="/register" method="POST" name="user" class="b-form form1 form-reg">


                <input type="text" placeholder="Имя" name="firstname" class="b-input" id="btn-name">
                <input type="text" placeholder="Фамилия" name="lastname" class="b-input">
                <input type="text" placeholder="Логин" name="username" class="b-input">
                <input type="text" placeholder="email" name="email" class="b-input">
                <input type="password" placeholder="Пароль" name="password" class="b-input">
                <textarea name="bio" id="" class="bio" placeholder="bio"></textarea>
                <button type="submit" class="b-button btn1 button-reg">Зарегистрироваться</button>


            </form>

            <form action="/" method="GET" class="b-form form1 form-reg">
                <button type="submit" class="b-button btn1 button-reg">На главную</button>
            </form>




        </section>



    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
