<body>
    <div class="container-fluid">
        <header class="b-header">
            <p class="news">Auth entry</p>
        </header>

        <section class="newSection container">
            {{#if error}}
            <div class="err">
                    <h2 >auth error</h2>
            </div>
            
            {{/if}}

            <form action="/auth" method="POST" class="b-form form1 form-reg">


                <input type="text" placeholder="Логин" name="username" class="b-input">
                {{!-- <input type="text" placeholder="email" name="email" class="b-input"> --}}
                <input type="password" placeholder="Пароль" name="password" class="b-input">

                <button type="submit" class="b-button btn1 button-reg">Войти</button>


            </form>

            <form action="/" method="GET" class="b-form form1 form-reg">


                <button class="b-button btn1 button-reg">На главную</button>

            </form>
            <form action="/register" method="GET" class="b-form form1 form-reg">

                <button class="b-button btn1 button-reg">Регистрация</button>


            </form>

             <form action="/users" method="GET" class="b-form form1 form-reg">
                        

                            <button class="b-button btn1 button-reg">показать пользователей</button>
                       
                    </form>






        </section>



